<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/health_textview"
            android:text="@string/health_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_margin="2dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/Joy_textview"
            android:text="@string/joy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D44422"
            android:textColor="#FFFFFF"
            android:layout_margin="2dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/Hunger_textview"
            android:text="@string/hunger_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#433B45"
            android:textColor="#FFFFFF"
            android:layout_margin="2dp"
            android:padding="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/points_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/points_text"
        android:layout_gravity="center"
        android:background="#433B45"
        android:textColor="#FFFFFF"
        android:layout_margin="2dp"
        android:padding="10dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/food_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food_btn"
            android:layout_weight="1"
            android:background="#FFD700"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/milk_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/milk_btn"
            android:layout_weight="1"
            android:background="#FFD700"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/treat_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/treat_btn"
            android:layout_weight="1"
            android:background="#FFD700"
            android:layout_margin="2dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/food_txt"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/heal_txt"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/treat_txt"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>